<h1>Account Page</h1>
<h3><%= current_user.username %>'s events</h3>
<div>
    <h4>Future Events</h4>
    <ul>
        <% @user.attended_events.where('event_date > ?', Date.today).each do |event| %>
        <li><%= link_to event.name, event %></li>
        <% end %>
    </ul>
</div>
<div>
    <h4>Past Events</h4>
    <ul>
        <% @user.attended_events.where('event_date < ?', Date.today).each do |event| %>
        <li><%= link_to event.name, event %></li>
        <% end %>
    </ul>
</div>