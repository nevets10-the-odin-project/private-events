<h1>Event List</h1>
<% if user_signed_in? %>
    <%= link_to 'Add new event', new_event_path %>
<% end %>
<div>
    <h2>Upcoming Events</h2>
    <ul>
        <% @upcoming_events.each do |event| %>
            <li><%= link_to event.name, event %></li>
        <% end %>
    </ul>
</div>
<div>
    <h2>Past Events</h2>
    <ul>
        <% @past_events.each do |event| %>
            <li><%= link_to event.name, event %></li>
        <% end %>
    </ul>
</div>