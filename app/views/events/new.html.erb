<h1>New Event</h1>

<%= form_with model: @event do |form| %>
    <% if @event.errors.any? %>
        <ul style="color: red">
            <% @event.errors.each do |error| %>
                <li><%= error.full_message %></li>
            <% end %>
        </ul>
    <% end %>

    <%= form.label :name %>
    <%= form.text_field :name %>
    <br>
    <%= form.label :location %>
    <%= form.text_field :location %>
    <br>
    <%= form.label :event_date %>
    <%= form.date_field :event_date %>
    <br>
    <%= form.submit %>
<% end %>